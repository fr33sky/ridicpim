<p></p>
<div class="col-md-4 offset-md-4 well signin">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name,
                      url: session_path(resource_name),
                      wrapper_mappings: { boolean: :vertical_boolean }) do |f| %>
    <%= f.input :email, label: false do %>
      <div class="input-group">
        <%= f.input_field :email, autofocus: true, class: 'form-control-sm input-lg' %>
        <span class="input-group-addon"><i class="fa fa-user" style="color: black"></i></span>
      </div>
    <% end %>

    <%= f.input :password, label: false do %>
      <div class="input-group">
        <%= f.input_field :password, class: 'form-control-sm input-lg' %>
        <span class="input-group-addon"><i class="fa fa-lock" style="color: black"></i></span>
      </div>
    <% end %>

    <% if devise_mapping.rememberable? -%>
      <%= f.input :remember_me, as: :boolean %>
    <% end -%>

    <%= f.button :submit, "Log in", class: 'btn unique-color btn-block btn-lg' %>
  <% end %>

  <%= flash_messages layout_flash: false %>

  <%= render "devise/shared/links" %>
</div>