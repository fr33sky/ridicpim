.col-md-10.offset-md-1
  h1
    | Products
  = link_to "New Product", "#new_product", data: { toggle: "modal" }, class: "btn btn-sm btn-primary"
  table.table.table-striped
    thead
      th
      th
        | Name
      th
        | Amazon SKU
      th
        | Price
    tbody#products
      = render @products
#new_product.modal.fade
  = simple_form_for Product.new, remote: true, validate: true do |f|
    .modal-dialog
      .modal-content
        .modal-header
          button.close aria-hidden="true" data-dismiss="modal" type="button"  Ã—
          h4.modal-title
            | New Product
        .modal-body
          .form-inputs
            = f.input :name, autofocus: true
            = f.input :amazon_sku
            = f.input :price
        .modal-footer
          button.btn.stylish-color-dark[type="button" data-dismiss="modal"]
            | Close
          = f.button :submit, class: 'btn unique-color'
javascript:
  $(document).ready(function() {
    $(".modal").on("shown.bs.modal", function(e) {
      $(':input','#new_product').not(':button, :submit, :reset, :hidden').val('').removeAttr('checked').removeAttr('selected');
      $('form[data-validate]').enableClientSideValidations();
    });
  });
