<%= javascript_include_tag "order-user-date" %>

<div class="container">
  <div class="col-md-10 col-md-offset-1 panel panel-default">
    <div class="panel-body new-sales-receipt-form">
      <h1>New Sales Receipt</h1>
        <%= render 'form' %>
        <%= link_to 'Back', sales_receipts_path %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $(".add_fields").click();
    $(document).on('change', '.choose-product', function() {
      var text = $(".choose-product option:selected").text();
      if(text) {
        if(text.match(/Choose/)) {
          if(text.match(/Choose/g).length === 1) {
            $(".add_fields").click();
          }
        } else {
          $(".add_fields").click();
        }
      }
     });
  });
</script>