$("#contacts").prepend('<%= j render @contact %>');

var $tbody = $('table tbody');
$tbody.find('tr').sort(function(a,b){ 
    var tda = $(a).find('td:eq(1)').text();
    var tdb = $(b).find('td:eq(1)').text(); 
    return tda > tdb ? 1 
           : tda < tdb ? -1 
           : 0;           
}).appendTo($tbody);

$("#new_contact").modal("hide");