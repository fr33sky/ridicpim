<div class="container">
  <div class="col-md-10 col-md-offset-1 panel panel-default">
    <div class="panel-body new-order-form">
      <%= link_to(fa_icon("pencil", text: "Edit"), edit_order_path(@order), class: "btn btn-primary btn-sm") %>
      <%= link_to(fa_icon("trash", text: "Delete"), @order, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm") %>
      <%= link_to(fa_icon("book", text: "All Orders"), orders_path, class: "btn btn-success btn-sm") %>
      <div class="page-header">
        <h1><%= @order.name %> <small><%= local_time(@order.user_date) %></small></h1>
      </div>
      <div>
        <h4>
          <%= @order.contact.name %>
        </h4>
        <p>
          <%= @order.contact.address %><br>
          <%= @order.contact.city %>, <%= @order.contact.state %>, <%= @order.contact.postal_code %>
          <%= @order.contact.country %>
        </p>
      </div>
      <table class="table table-striped">
        <thead>
          <th>Product</th>
          <th>Quantity</th>
          <th>Cost</th>
          <th>Average Cost</th>
        </thead>
        <tbody>
          <%= render @order.order_items.includes(:product) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
